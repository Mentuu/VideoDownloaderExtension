{
  "manifest_version": 3,
  "name": "Video & Stream Downloader",
  "version": "2.2",
  "description": "Auto-detects and downloads videos from any site",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage",
    "webRequest",
    "notifications",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video & Stream Downloader"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; img-src 'self' https: http: data: blob:; style-src 'self' 'unsafe-inline';"
  }
}
